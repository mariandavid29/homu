{
  "name": "@homu/server",
  "type": "module",
  "private": "true",
  "exports": {
    "./interface": {
      "types": "./src/routes.ts"
    }
  },
  "scripts": {
    "dev": "wrangler dev --port 8787",
    "deploy": "wrangler deploy --minify",
    "gen:cloudflare": "wrangler types --env-interface CloudflareBindings",
    "gen:auth": "pnpm dlx @better-auth/cli@latest generate --config ./src/lib/auth/config.ts --output ./src/lib/db/models/auth/auth.schema.ts",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "format": "prettier"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "better-auth": "^1.3.33",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "hono": "4.10.4",
    "resend": "^6.5.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@homu/formatter": "workspace:^",
    "@homu/linter": "workspace:^",
    "@types/node": "^22.18.12",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.38.0",
    "prettier": "^3.5.3",
    "typescript": "^5.9.3",
    "wrangler": "^4.45.2"
  }
}
