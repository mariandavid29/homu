{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "paths": {
      "@/server/*": ["../../apps/server/src/*"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "**/apps/client"]
  }
}
